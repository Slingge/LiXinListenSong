<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fankui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lixin.listen.activity.FankuiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/img_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助与反馈"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/base_color" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_drop_shadow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/img_planet"
        android:text="常见问题"
        android:textColor="@color/col3" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:background="@color/col4"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_fankui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6.5dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/img_fankui"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:text="问题反馈："
            android:textColor="@color/col3"

            />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/tv_fankui"
            android:background="@mipmap/bg_recommend_code"
            android:gravity="top"
            android:hint="请输入您的问题提交给我们"
            android:minHeight="40dp"
            android:padding="10dp"
            android:textColorHint="@color/col3"
            android:textSize="13sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/img_phone"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:text="联系电话："
            android:textColor="@color/col3" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@mipmap/bg_recommend_code"
            android:hint="选填，便于我们于您联系"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="6.5dp"
            android:textColor="@color/col3"
            android:textColorHint="@color/col3"
            android:inputType="number"
            android:textSize="13sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@mipmap/img_commit" />

</LinearLayout>

